[Unit]
Description=Backup deamon for the CA folder
After=network-online.target
Wants=network-online.target

[Service]
User=backupr
ExecStart=/opt/backup/backupd.sh /opt/backup/enc/CA backup.imovies.ch /home/ca-backup/ "rm /opt/backup/enc/CA/private/users/* /opt/backup/enc/CA/private/newcerts/*"
Restart=on-failure
StandardOutput=journal
StandardError=journal
SyslogIdentifier=encryptd-ca-folder

[Install]
WantedBy=multi-user.target